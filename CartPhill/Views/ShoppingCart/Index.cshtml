@using CartPhill.Models
@model CartPhill.ViewModels.ShoppingCartViewModel
@{
    ViewBag.Title = "Shopping Cart";
}
<h3>
    <em>Review</em> your cart:
</h3>

<p class="button">
    @Html.ActionLink("Checkout >>", "AddressAndPayment", "Checkout")
</p>

<div id="update-message">
</div>

<table>
    <tr>
        <th>
            Product Name
        </th>
        <th>
            Price (each)
        </th>
        <th>
            Quantity
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model.CartItems)
    {
        <tr id="row-@item.RecordId">
            <td>
                
                @Html.ActionLink(item.product.Name, "Details", "OPPs", new {id = item.ProductId}, null)
            </td>
            <td>
                $ @item.product.Price
            </td>
            <td id="item-count-@item.RecordId">
                @item.Count
            </td>
            <td>
                <a href="#" class="RemoveLink" data-id="@item.RecordId">Remove this from cart!
                </a>
            </td>
        </tr>
    }
    <tr>
        <td>
            Owing 
        </td>
        <td id="cart-total">
            $ @Model.CartTotal
        </td>
        <td></td>
        <td></td>
        
    </tr>
</table>
